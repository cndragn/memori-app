
<div class="imageresp">
  <div class="row">
    <div class="col s12">
      <%= image_tag "header_profile.png" %>
    </div>
  </div>
</div>



<br>
<div class="container">
  <div class="row">

    <div class="col s12 m3 l3">
      <div class="card-panel black-text center">
        <i class="large material-icons">person</i>
        <p>
          Name: <%= @user.name %>
        </p>
        <p>
          Email: <%= @user.email %>
        </p>
        <br>
        <br>
        <a class="waves-effect waves-light btn yellow"><i class="material-icons black-text center">edit</i></a>
      </div>
    </div>

    <div class="col s12 m9 l9">
      <div class="card-panel yellow lighten-3">
        <div class="row">
          <h3>My studydecks</h3>

          <% @mydecks.each do |deck| %>
          <div class="col s12 m6 l6 center">
            <div class="card-panel">
              <table>
                <tbody>
                  <tr>
                    <h3><%= link_to deck.title, deck %></h3>
                    <p><%= deck.description %></p>
                    <p><%= deck.language.lingua %> | <%= deck.category.label %></p>
                    <p><%= link_to 'Card List', deck_cards_path(deck) %> | <%= link_to 'Edit', edit_deck_path(deck) %> | <%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <% end %>

        </div>
        </div>
      </div>

    </div>

    <div class="row">
      <h3>Bookmarked decks</h3>
      <div class="col s12 m3 l3 center">
        <div class="card-panel black-text">
          <p>Title</p>
          <p>Category</p>
          <p>?</p>
        </div>
      </div>
      <div class="col s12 m3 l3 center">
        <div class="card-panel black-text">
          <p>Title</p>
          <p>Category</p>
          <p>?</p>
        </div>
      </div>
      <div class="col s12 m3 l3 center">
        <div class="card-panel black-text">
          <p>Title</p>
          <p>Category</p>
          <p>?</p>
        </div>
      </div>
      <div class="col s12 m3 l3 center">
        <div class="card-panel black-text">
          <p>Title</p>
          <p>Category</p>
          <p>?</p>
        </div>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="col s12">
        <div class="card-panel black-text">
          <h3>My scores</h3>
        </div>
      </div>
    </div>
  </div>
