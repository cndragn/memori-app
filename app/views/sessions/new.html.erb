<%= render 'layouts/imageheader' %>


<div class="container">
  <div class="row">
    <div class="col s12 m6 l6">
      <h1>Login</h1>

      <%= form_tag '/login' do %>

      <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>

      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <button class="btn waves-effect waves-light grey lighten-2 black-text" type="submit" name="action">Login</button>

      <% end %>
      <br>
      <div class="divider">
      </div>
      <br>
      <div class="center" style="color:black;">
        OR
      </div>
      <br>

      <a scope="public_profile,email,user_friends"
        onlogin="checkLoginState();" class="waves-effect waves-light btn blue darken-4 social facebook white-text" style="width:280px;">
        <i class="fab fa-facebook-f"></i>   Sign in with facebook</a>

      <!-- <div class="fb-login-button" data-width="30" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="false"></div> -->
      <% link_to 'Token Transfer', facebook_path,
        id: 'token-transfer-link' %><br>
      <% link_to 'Real Login', facebook_path,
        id: 'login-link' %>
        <br>
        <a id="sign_in" href="/auth/google_oauth2" class="waves-effect waves-light btn deep-orange social google white-text" style="width:280px;">
          <i class="fab fa-google"></i> Sign in with google</a>  <br>

          </div>

      <br>
      <br>
    </div>
  </div>
