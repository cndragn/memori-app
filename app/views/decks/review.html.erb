<%= render 'layouts/imageheader' %>
<!-- Desktop-view -->
<br>
<div class="container center hide-on-small-only">
  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card-panel yellow lighten-2">

      <i class="material-icons green-text large">check</i>
      <br>
      <h3 style="font-weight:bold;">CORRECT</h3>
      <br>
      <br>
      <h3>English World</h3>
      <h3>Spanish Word</h3>
      <br>
      <br>

      <%= link_to( ("<i class='material-icons'>edit</i>").html_safe, deck_review_url, { :class=>"btn-floating btn-large waves-effect waves-light black" }) %>
      <h4>Next word</h4>
      <br>
      </div>
    </div>
  </div>
</div>

<!-- Mobile-view -->
<br>
<div class="container center hide-on-med-and-up">
  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card-panel yellow lighten-2">

      <i class="material-icons green-text large">check</i>
      <br>
      <h4 style="font-weight:bold;">CORRECT</h4>
      <br>
      <br>
      <h5>English World</h5>
      <h5>Spanish Word</h5>
      <br>
      <br>

      <%= link_to( ("<i class='material-icons'>edit</i>").html_safe, deck_review_url, { :class=>"btn-floating btn-large waves-effect waves-light black" }) %>
      <h5>Next word</h5>
      <br>
      </div>
    </div>
  </div>
</div>
