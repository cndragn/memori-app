<%= form_with(model: deck, local: true) do |form| %>
<% if deck.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

  <ul>
    <% deck.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="panel-card">
      <div class="col s12 m6 l6">
        <h5>Create</h5>
        <br>
        <div class="field">
          <!-- <%= form.label :language_id %> -->
          <%= form.hidden_field :language_id, id: :deck_language_id, :value => 1  %>
        </div>

        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, id: :deck_title %>
        </div>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_field :description, id: :deck_description %>
        </div>

        <div class="field">
          <%= form.label :category_id %>
          <%= form.text_field :category_id, id: :deck_category_id %>
        </div>

        <!-- <div class="field">
          <%= form.label :user_id %>
          <%= form.text_field :user_id, id: :deck_user_id %>
        </div> -->

        <div class="actions">
          <%= form.submit %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
