<div class="imageresp">
  <%= image_tag "header1.jpg", :class => "image1" %>
  <%= image_tag "LogoM.png", :class => "image2" %>
</div>

  </div>
  <br>
  <br>
  <div class="container">

    <p id="notice"><%= notice %></p>
    <%= link_to 'Back', users_path %> |
    <%= link_to 'New Deck', new_user_deck_path(current_user.id) %>
    <h3>All studydecks</h3>

    <br>
    <br>


  <div class="row">

    <% @decks.each do |deck| %>
    <div class="col s12 m6 l6 center">
      <div class="card-panel">
        <table>
          <tbody>
            <tr>
              <h3><%= link_to deck.title, deck %></h3>
              <p><%= deck.description %></p>
              <p><%= deck.language.lingua %> | <%= deck.category.label %></p>
              <p><%= link_to 'Card List', deck_cards_path(deck) %> | <%= link_to 'Edit', edit_deck_path(deck) %> | <%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <% end %>

  </div> <!-- end of row -->
</div> <!-- end of container -->
